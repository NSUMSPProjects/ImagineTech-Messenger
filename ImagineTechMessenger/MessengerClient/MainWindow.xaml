<Window x:Class="MessengerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="141.333,20.383,0,0" VerticalAlignment="Top" Width="75" Background="#FFC4ABF9" FontFamily="Georgia" Height="19.96"/>
        <TextBox x:Name="UserNameTextBox" HorizontalAlignment="Left" Margin="10,20.383,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="19.96"/>
        <RichTextBox x:Name="TextDisplayRichTextBox" Margin="10,59,10,47.333"/>
        <Button x:Name="Send" Content="Send" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Background="#FFC4ABF9" IsDefault="True" FontFamily="Georgia" Height="19.96"/>
        <TextBox x:Name="MessageTextBox" Margin="10,0,98.333,10" TextWrapping="Wrap" VerticalAlignment="Bottom" Height="19.96"/>
        <Label x:Name="WelcomeLabel" Content="[Welcome, Shabbir]" HorizontalAlignment="Right" Margin="0,20.383,40.339,0" VerticalAlignment="Top" Width="117.993" FontSize="11" FontFamily="Georgia"/>

    </Grid>
</Window>
